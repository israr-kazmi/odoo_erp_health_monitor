<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View (Odoo 18) -->
    <record id="view_slow_query_list" model="ir.ui.view">
        <field name="name">erp.health.slow.query.list</field>
        <field name="model">erp.health.slow.query</field>
        <field name="arch" type="xml">
            <list string="Slow Queries" create="false" edit="false">
                <field name="detected_at"/>
                <field name="duration" widget="float_time"/>
                <field name="database_user"/>
                <field name="query_state"/>
                <field name="pid"/>
                <field name="query_text"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_slow_query_form" model="ir.ui.view">
        <field name="name">erp.health.slow.query.form</field>
        <field name="model">erp.health.slow.query</field>
        <field name="arch" type="xml">
            <form string="Slow Query Details" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="detected_at"/>
                            <field name="duration" widget="float_time"/>
                            <field name="database_user"/>
                        </group>
                        <group>
                            <field name="query_state"/>
                            <field name="pid"/>
                        </group>
                    </group>
                    <group>
                        <field name="query_text" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_slow_query_search" model="ir.ui.view">
        <field name="name">erp.health.slow.query.search</field>
        <field name="model">erp.health.slow.query</field>
        <field name="arch" type="xml">
            <search>
                <field name="database_user"/>
                <field name="query_text"/>
                <filter string="Today" name="today" domain="[('detected_at', '&gt;=', (context_today()).strftime('%Y-%m-%d 00:00:00')),
                 ('detected_at', '&lt;=', (context_today()).strftime('%Y-%m-%d 23:59:59'))]"/>
                <filter string="Last 7 Days" name="last_7d" domain="[('detected_at', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="last_30d" domain="[('detected_at', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Database User" name="group_user" context="{'group_by': 'database_user'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'query_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_slow_query" model="ir.actions.act_window">
        <field name="name">Slow Queries</field>
        <field name="res_model">erp.health.slow.query</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>