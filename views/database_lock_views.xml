<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Database Locks List View -->
    <record id="view_database_lock_list" model="ir.ui.view">
        <field name="name">erp.health.database.lock.list</field>
        <field name="model">erp.health.database.lock</field>
        <field name="arch" type="xml">
            <list string="Database Locks" create="false" edit="false"
                  decoration-danger="wait_time &gt; 10">
                <field name="detected_at"/>
                <field name="pid"/>
                <field name="relation"/>
                <field name="mode"/>
                <field name="wait_time" widget="float_time"/>
                <field name="query"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_database_lock" model="ir.actions.act_window">
        <field name="name">Database Locks</field>
        <field name="res_model">erp.health.database.lock</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>