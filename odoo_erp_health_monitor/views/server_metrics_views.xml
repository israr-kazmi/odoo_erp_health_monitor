<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_server_metrics_list" model="ir.ui.view">
        <field name="name">erp.health.server.metrics.list</field>
        <field name="model">erp.health.server.metrics</field>
        <field name="arch" type="xml">
            <list string="Server Metrics" create="false" edit="false">
                <field name="timestamp"/>
                <field name="cpu_percent" widget="progressbar"/>
                <field name="ram_percent" widget="progressbar"/>
                <field name="ram_used_gb"/>
                <field name="disk_percent" widget="progressbar"/>
                <field name="load_average_1m"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_server_metrics_form" model="ir.ui.view">
        <field name="name">erp.health.server.metrics.form</field>
        <field name="model">erp.health.server.metrics</field>
        <field name="arch" type="xml">
            <form string="Server Metrics" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="timestamp"/>
                    </group>
                    <group string="CPU">
                        <field name="cpu_percent"/>
                    </group>
                    <group string="Memory">
                        <group>
                            <field name="ram_percent"/>
                            <field name="ram_used_gb"/>
                        </group>
                        <group>
                            <field name="ram_total_gb"/>
                        </group>
                    </group>
                    <group string="Disk">
                        <group>
                            <field name="disk_percent"/>
                            <field name="disk_used_gb"/>
                        </group>
                        <group>
                            <field name="disk_total_gb"/>
                        </group>
                    </group>
                    <group string="Load Average">
                        <group>
                            <field name="load_average_1m"/>
                            <field name="load_average_5m"/>
                        </group>
                        <group>
                            <field name="load_average_15m"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_server_metrics_graph" model="ir.ui.view">
        <field name="name">erp.health.server.metrics.graph</field>
        <field name="model">erp.health.server.metrics</field>
        <field name="arch" type="xml">
            <graph string="Server Metrics" type="line">
                <field name="timestamp" type="row"/>
                <field name="cpu_percent" type="measure"/>
                <field name="ram_percent" type="measure"/>
                <field name="disk_percent" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_server_metrics" model="ir.actions.act_window">
        <field name="name">Server Metrics</field>
        <field name="res_model">erp.health.server.metrics</field>
        <field name="view_mode">list,graph,form</field>
    </record>
</odoo>