<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_cron_log_list" model="ir.ui.view">
        <field name="name">erp.health.cron.log.list</field>
        <field name="model">erp.health.cron.log</field>
        <field name="arch" type="xml">
            <list string="Cron Execution Logs" create="false" edit="false" decoration-danger="status == 'failed'" decoration-warning="is_slow == True">
                <field name="execution_date"/>
                <field name="cron_name"/>
                <field name="duration" widget="float_time"/>
                <field name="status" widget="badge" decoration-success="status == 'success'" decoration-danger="status == 'failed'"/>
                <field name="is_slow" invisible="1"/>
                <field name="error_message"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cron_log_form" model="ir.ui.view">
        <field name="name">erp.health.cron.log.form</field>
        <field name="model">erp.health.cron.log</field>
        <field name="arch" type="xml">
            <form string="Cron Log Details" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="cron_id"/>
                            <field name="cron_name"/>
                            <field name="execution_date"/>
                        </group>
                        <group>
                            <field name="duration" widget="float_time"/>
                            <field name="status"/>
                            <field name="is_slow"/>
                        </group>
                    </group>
                    <group string="Error Details" invisible="status == 'success'">
                        <field name="error_message" widget="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_cron_log_search" model="ir.ui.view">
        <field name="name">erp.health.cron.log.search</field>
        <field name="model">erp.health.cron.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="cron_name"/>
                <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
                <filter string="Slow Execution" name="slow" domain="[('is_slow', '=', True)]"/>
                <!-- <filter string="Today" name="today" domain="[('execution_date', '&gt;=', (context_today()).strftime('%Y-%m-%d 00:00:00')),
                 ('execution_date', '&lt;=', (context_today()).strftime('%Y-%m-%d 23:59:59'))]"/> -->
                <filter string="Last 7 Days" name="last_7d" domain="[('execution_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="last_30d" domain="[('execution_date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Cron Job" name="group_cron" context="{'group_by': 'cron_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cron_log" model="ir.actions.act_window">
        <field name="name">Cron Logs</field>
        <field name="res_model">erp.health.cron.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>
</odoo>