<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Odoo Logs List View -->
    <record id="view_odoo_log_list" model="ir.ui.view">
        <field name="name">erp.health.odoo.log.list</field>
        <field name="model">erp.health.odoo.log</field>
        <field name="arch" type="xml">
            <list string="Odoo Logs" create="false" edit="false"
                  decoration-danger="level == 'ERROR' or level == 'CRITICAL'"
                  decoration-warning="level == 'WARNING'"
                  decoration-info="level == 'DEBUG'">
                <field name="timestamp"/>
                <field name="level" widget="badge" 
                       decoration-danger="level == 'ERROR' or level == 'CRITICAL'"
                       decoration-warning="level == 'WARNING'"
                       decoration-success="level == 'INFO'"
                       decoration-info="level == 'DEBUG'"/>
                <field name="logger"/>
                <field name="message"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_odoo_log_search" model="ir.ui.view">
        <field name="name">erp.health.odoo.log.search</field>
        <field name="model">erp.health.odoo.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="logger"/>
                <field name="message"/>
                <filter string="Errors" name="errors" domain="[('level', 'in', ['ERROR', 'CRITICAL'])]"/>
                <filter string="Warnings" name="warnings" domain="[('level', '=', 'WARNING')]"/>
                <filter string="Info" name="info" domain="[('level', '=', 'INFO')]"/>
                <group expand="0" string="Group By">
                    <filter string="Level" name="group_level" context="{'group_by': 'level'}"/>
                    <filter string="Logger" name="group_logger" context="{'group_by': 'logger'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_odoo_log" model="ir.actions.act_window">
        <field name="name">Odoo Logs</field>
        <field name="res_model">erp.health.odoo.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_errors': 1}</field>
    </record>
</odoo>