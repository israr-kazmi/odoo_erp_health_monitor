<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron: Refresh Slow Queries -->
    <record id="cron_refresh_slow_queries" model="ir.cron">
        <field name="name">ERP Health: Refresh Slow Queries</field>
        <field name="model_id" ref="model_erp_health_slow_query"/>
        <field name="state">code</field>
        <field name="code">model.refresh_slow_queries()</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
    </record>

    <!-- Cron: Collect Server Metrics -->
    <record id="cron_collect_server_metrics" model="ir.cron">
        <field name="name">ERP Health: Collect Server Metrics</field>
        <field name="model_id" ref="model_erp_health_server_metrics"/>
        <field name="state">code</field>
        <field name="code">model.collect_metrics()</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="active" eval="True"/>
    </record>

    <!-- System Parameters -->
    <record id="param_slow_query_threshold" model="ir.config_parameter">
        <field name="key">odoo_erp_health_monitor.slow_query_threshold</field>
        <field name="value">2.0</field>
    </record>

    <record id="param_slow_cron_threshold" model="ir.config_parameter">
        <field name="key">odoo_erp_health_monitor.slow_cron_threshold</field>
        <field name="value">10.0</field>
    </record>
</odoo>